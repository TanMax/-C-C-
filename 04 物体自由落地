#include <iostream> 
#include <stdio.h>
#include <math.h>
using namespace std;
int main()
{
	double h0 = 100;
	double sum0 = 100;
	double h1;
	for (int i = 1; i < 10; i++)
	{
		h1 = h0 /2 ;
		h0 = h1;
		sum0 = sum0 + h1 * 2;


	}
	cout << "第10次落地时，共经过 " << sum0<<"米"<< endl;
	cout << "第10次反弹的高度 " << h1/2 << "米" << endl;
	return 0;
}
